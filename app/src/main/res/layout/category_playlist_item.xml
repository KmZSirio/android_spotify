<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clCategoryPlaylistItem">

    <ImageView
        android:id="@+id/ivCategoryPlaylistItem"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/playlist_cover" />

    <TextView
        android:id="@+id/tvCategoryPlaylistItem"
        tools:text="La Reina: Exitos del Regional Mexicano"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCategoryPlaylistItem" />
</androidx.constraintlayout.widget.ConstraintLayout>