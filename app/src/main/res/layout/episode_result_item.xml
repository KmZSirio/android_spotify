<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:background="@color/spotifyBlack"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clEpisodeResultItem">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEpisodeResultItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivImageEpisodeResultItem"
            android:layout_width="85dp"
            android:layout_height="85dp"
            tools:src="@drawable/playlist_cover"
            android:contentDescription="@string/episode_cover_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNameEpisodeResultItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="15"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/cvEpisodeResultItem"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Believe (Deluxe)" />

    <TextView
        android:id="@+id/tvDescriptionEpisodeResultItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="15"
        android:maxLines="2"
        android:paddingHorizontal="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/spotifyGreyLighter"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvEpisodeResultItem"
        app:layout_constraintTop_toBottomOf="@+id/tvNameEpisodeResultItem"
        tools:text="Believe (Deluxe) Deluxe) Believe (Deluxe)" />

    <TextView
        android:id="@+id/tvDateEpisodeResultItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="30"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/spotifyGreyLighter"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvEpisodeResultItem"
        tools:text="Believe (Deluxe) Deluxe) Believe (Deluxe)" />
</androidx.constraintlayout.widget.ConstraintLayout>