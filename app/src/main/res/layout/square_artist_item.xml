<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:background="@color/spotifyBlack"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/ivArtistImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/artist_picture"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_image" />

    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Gigantes Del Vallenato"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivArtistImage" />
</androidx.constraintlayout.widget.ConstraintLayout>