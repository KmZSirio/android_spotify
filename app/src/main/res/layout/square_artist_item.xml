<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/spotifyBlack">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="0dp">

        <ImageView
            android:id="@+id/ivArtistImageSquareArtist"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/artist_picture"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/no_image" />

        <TextView
            android:id="@+id/tvArtistNameSquareArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Los Gigantes Del Vallenato"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivArtistImageSquareArtist" />}

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>