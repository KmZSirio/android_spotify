<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyAPI" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotifyGreen</item>
        <item name="colorPrimaryVariant">#18ac4c</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spotifyBlue</item>
        <item name="colorSecondaryVariant">#303540</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/spotifyBlack</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

        <!--* HOME CHIPS -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <!--* TEXT CollapsingToolBar -->
    <style name="TitleExpanded" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">23sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DescriptionExpanded" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/spotifyGreyLighter</item>
    </style>
    <style name="OwnerExpanded" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TitleCollapsed" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--* HOME CARDS TEXT -->
    <style name="HomeCardsText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--* LOGIN BUTTONS -->
    <style name="SignUpGreenButton" parent="Base.Widget.AppCompat.Button">
        <item name="materialButtonStyle">@style/GreenButton</item>
    </style>
    <style name="GreenButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/sign_up_button</item>
    </style>


    <style name="ContinueBlackButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="materialButtonStyle">@style/BlackButton</item>
    </style>
    <style name="BlackButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/continue_with_button</item>
    </style>


    <style name="LogInBlackButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="materialButtonStyle">@style/TransButton</item>
    </style>
    <style name="TransButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/log_in_button</item>
    </style>

</resources>